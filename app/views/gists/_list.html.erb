<% @gists.each do |gist| %>
    <% if gist.latest_history %>
        <h4>
          <% if gist.is_public %>
              <div class="well well-small">
                <i class="icon-pencil"></i>&nbsp;
                <%= link_to gist.title, gist %>
                <div class="pull-right">
                  <small>
                    <%= time_ago_in_words(gist.latest_history.created_at) + ' ago' %>
                    by
                    <% if gist.user.nil? %>
                        Anonymous
                    <% else %>
                        <%= link_to gist.user.nickname, user_path(gist.user) %>
                    <% end %>
                  </small>
                </div>
              </div>
          <% else %>
              <div class="alert">
                <i class="icon-home"></i>&nbsp;
                &nbsp;<%= link_to gist.title, gist %>
                <div class="pull-right">
                  <small>
                    <%= time_ago_in_words(gist.latest_history.created_at) + ' ago' %>
                    by
                    <% if gist.user.nil? %>
                        Anonymous
                    <% else %>
                        <%= link_to gist.user.nickname, user_path(gist.user) %>
                    <% end %>
                  </small>
                </div>
              </div>
          <% end %>
        </h4>
        <pre class="prettyprint linenums"><small><%= gist.latest_history.headline %></small></pre>
    <% end %>
<% end %>
